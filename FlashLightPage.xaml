<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF_Text_to_Speech1.FlashLightPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Flash Light" 
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            </StackLayout>
            <StackLayout>
                <Button  Text="Flash Light" 
                         x:Name="FlashLight" Clicked="FlashLight_Clicked"
                         VerticalOptions="CenterAndExpand" 
                         WidthRequest="120"
                         HorizontalOptions="CenterAndExpand" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>