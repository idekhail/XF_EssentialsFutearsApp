             x:Class="XF_Text_to_Speech1.TextToSpeechPage">
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Text To Speech" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label x:Name="TextSpeakEn" Text="Make changes to your XAML file and save to see your 
               UI update in the running app with XAML Hot Reload. Give it 
